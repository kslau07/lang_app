<main class="grid gap-10 px-10 py-12">
  <nav class="justify-self-center grid grid-flow-col gap-10">
    <a href="<%= new_quiz_path %>" name="commit" class="relative px-6 py-3 font-bold text-black cursor-pointer w-max group justify-self-center">
      <span class="absolute inset-0 w-full h-full transition duration-300 ease-out transform -translate-x-2 -translate-y-2 bg-blue-300 group-hover:translate-x-0 group-hover:translate-y-0"></span>
      <span class="absolute inset-0 w-full h-full border-4 border-black"></span>
      <span class="relative">Take a quiz!</span>
    </a>
    <a href="<%= new_question_path %>" name="commit" class="relative px-6 py-3 font-bold text-black cursor-pointer w-max group justify-self-center">
      <span class="absolute inset-0 w-full h-full transition duration-300 ease-out transform -translate-x-2 -translate-y-2 bg-orange-300 group-hover:translate-x-0 group-hover:translate-y-0"></span>
      <span class="absolute inset-0 w-full h-full border-4 border-black"></span>
      <span class="relative">Add a Question!</span>
    </a>
  </nav>


<%
=begin %>
    <div class="p-4 bg-gray-200">
      <%= turbo_frame_tag "first_turbo_frame" do %>
        Hello Rails!
        <%= link_to "New Question", new_question_path, class: "font-semibold text-blue-600 hover:underline" %>
      <% end %>
    </div>

<%
=end %>

  <h2>Categories and questions</h2>
  <% @categories.each do |category| %>
    <h2><%= category.name %></h2>
    <ol>
      <% category.questions.each do |q| %>
        <li>
          <span>Username: <%= q.user.email %></span>
          <span>Question: <%= q.ques_content %></span>
          <span>Translation: <%= q.translation %></span>
          <span>Answer: <%= q.correct_answer %></span>
        </li>
      <% end %>
    </ol>
  <% end %>
</main>

