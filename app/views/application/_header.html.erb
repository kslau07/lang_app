<div class="flex h-4">
  <div class="flex-1 bg-gradient-to-r from-blue-900 to-sky-600"></div>
  <div class="flex-1 bg-stone-50"></div>
  <div class="flex-1 bg-gradient-to-r from-red-800 to-rose-600"></div>
</div>
<% flash.each do |type, msg| %>
  <div class="flex justify-center font-bold text-white bg-green-500">
    <%= msg %>
  </div>
<% end %>
<div
  class="border-b-slate-200 border-b  px-6 py-4 grid grid-flow-col grid-cols-[minmax(44px,44px)_auto_1fr_auto] items-center"
  >
  <%= image_tag "baguette.png", { class: 'inline-block', alt: 'A book.', size: "44x44" }%>
  <%#= favicon_link_tag image_path('favicon.png') %>
  <div class="inline-block ml-2">
    <h1 class="block text-4xl font-extrabold tracking-tight text-rose-600">LangApp</h1>
    <h2 class="block text-xs tracking-wide text-slate-500">A simple language learning app!</h2>
  </div>
  <div class=""></div>
  <!-- blank 1fr -->
  <div class="grid grid-flow-col gap-2"><!-- links -->
    <a class="px-4 py-2 font-semibold text-gray-800 bg-white border border-gray-400 rounded shadow w-max hover:bg-gray-100">
      About
    </a>
    <% if current_user  %>
    

          <%= link_to "Sign Out", destroy_user_session_path, class: "px-4 py-2 font-semibold text-blue-700 bg-transparent border border-blue-500 rounded cursor-pointer w-max hover:bg-blue-500 hover:text-white hover:border-transparent", method: :delete, data: { turbo_method: :delete } %>

    <% else %>
    <a
      href="<%= new_user_registration_path %>"
      class="px-4 py-2 font-bold text-white bg-blue-500 border border-blue-700 rounded cursor-pointer w-max hover:bg-blue-700"
      >
      Sign Up
    </a>
    
      <%= link_to "Log In", new_user_session_path, class: "px-4 py-2 font-semibold text-blue-700 bg-transparent border border-blue-500 rounded cursor-pointer w-max hover:bg-blue-500 hover:text-white hover:border-transparent" %>

      
    <% end %>
  </div>
</div>
