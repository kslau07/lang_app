<div 
  class="sticky top-0 z-50 flex justify-center hidden h-6 bg-orange-500"
>
  Make this appear then fade away for notifications.
</div>
<div class="flex h-4">
  <div class="flex-1 bg-gradient-to-r from-blue-900 to-sky-600"></div>
  <div class="flex-1 bg-stone-50"></div>
  <div class="flex-1 bg-gradient-to-r from-red-800 to-rose-600"></div>
</div>
<% flash.each do |type, msg| %>
  <% if type == "notice" %>
    <div class="flex justify-center font-bold text-white bg-green-500">
      <%= msg %>
    </div>
  <% elsif type == "alert" %>
    <div class="flex justify-center font-bold text-white bg-orange-500">
      <%= msg %>
    </div>
  <% end %>
<% end %>
<div
  class="border-b-slate-200 border-b  px-12 py-4 grid grid-flow-col grid-cols-[minmax(72px,72px)_auto_1fr_auto] items-center"
  >
  <%= image_tag "baguette.png", { class: 'inline-block', alt: 'A book.', size: "72x72" }%>
  <%#= favicon_link_tag image_path('favicon.png') %>
  <a class="inline-block ml-3 text-center" href="<%= root_path %>">
    <div class="block px-2 text-4xl font-black tracking-tight border-4 border-blue-200 text-rose-500 bg-sky-200">LangApp</div>
    <div class="block p-2 -m-1 text-xs tracking-wide bg-orange-300 text-slate-50 -rotate-2">A simple language learning app!</div>
  </a>
  <div class=""></div>
  <!-- blank 1fr -->
  <div class="grid grid-flow-col gap-2"><!-- links -->
    <a class="px-4 py-2 font-semibold text-gray-800 bg-white border border-gray-400 rounded cursor-pointer w-max hover:bg-gray-100">
      About Us
    </a>
    <% if current_user  %>
      <%= link_to "Sign Out", destroy_user_session_path, class: "px-4 py-2 font-semibold text-blue-700 bg-transparent border border-blue-500 rounded cursor-pointer w-max hover:bg-blue-500 hover:text-white hover:border-transparent", method: :delete, data: { turbo_method: :delete } %>
    <% else %>
      <% unless controller_name == "registrations" && ["new","create"].include?(action_name) %><%# Hide sign-up button if user is on sign-up page%>
        <a
          href="<%= new_user_registration_path %>"
          class="px-4 py-2 font-bold text-white bg-blue-500 border border-blue-700 rounded cursor-pointer w-max hover:bg-blue-700"
          >
          Sign Up
        </a>
      <% end %>
      <% unless controller_name == "sessions" && ["new"].include?(action_name) %><%# Hide log in button if log in page already %>
        <%= link_to "Log In", new_user_session_path, class: "px-4 py-2 font-semibold text-blue-700 bg-transparent border border-blue-500 rounded cursor-pointer w-max hover:bg-blue-500 hover:text-white hover:border-transparent" %>
      <% end %>
    <% end %>
  </div>
</div>
