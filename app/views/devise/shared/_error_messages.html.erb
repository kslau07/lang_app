<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="border border-pink-300 bg-pink-50 mb-10 p-4">
    <h2 class="text-gray-600 italic">
      Some items require your attention:
      <%#= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul class="grid gap-2 mt-2">
      <% resource.errors.full_messages.each do |message| %>        
        <% message.gsub!("Email", "Username") %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
