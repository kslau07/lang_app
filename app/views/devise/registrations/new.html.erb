<div class="grid justify-center mb-10 mt-6">
  <h2 class="text-4xl text-blue-700 font-bold">Sign up</h2>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
html: { class: "grid grid-flow-row justify-center" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.label :email, "Username:", class: "font-bold text-lg" %>
  <%= f.text_field :email, autofocus: true, class: "p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6" %>


  <%= f.label :password %>
  <% if @minimum_password_length %>
    <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: "new-password", class: "p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6"  %>


  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6"  %>


  <div class="justify-self-center">
    <%= f.submit "Sign up", class: "px-12 py-2 font-bold text-white bg-blue-500 border border-blue-700 rounded cursor-pointer w-max hover:bg-blue-700" %>
  </div>
<% end %>
<div class="grid justify-center mt-10 font-medium text-blue-600 hover:underline"><%= render "devise/shared/links" %></div>
