<div class="grid justify-center mt-8 mb-10">
  <h2 class="text-4xl font-bold text-blue-700 mb-10 justify-self-center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-72 grid" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, "Username:", class: "w-full font-bold text-lg" %>
    <%= f.text_field :email, autofocus: true, class: "w-full p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6" %>

    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6"  %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border-2 border-slate-300 bg-gray-50 focus:outline-cyan-600 focus:outline-offset-1 mb-6"  %>
    
    <%= f.submit "Sign up", class: " px-12 py-2 font-bold text-white bg-blue-500 border border-blue-700 rounded cursor-pointer w-max hover:bg-blue-700 justify-self-center" %>
    <% end %>

  <div class="grid justify-center mt-10 font-medium text-blue-600 hover:underline"><%= render "devise/shared/links" %></div>
</div>
